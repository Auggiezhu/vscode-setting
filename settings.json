{
    "workbench.panel.defaultLocation": "right",
    "workbench.settings.editor": "json",
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "vscode-icons",
    "workbench.statusBar.visible": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.activityBar.visible": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.showTabs": false,
    "workbench.editor.labelFormat": "short",

    "editor.fontFamily": "Iosevka SS04",
    "editor.fontSize": 14,
    "editor.fontWeight": "500",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.renderControlCharacters": false,
    "editor.highlightActiveIndentGuide": true,
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "all",
    "editor.autoIndent": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.lineHeight": 21,
    "editor.rulers": [80],
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "smooth",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },

    "files.autoSave": "off",

    "python.pythonPath": "/Users/ml/anaconda3/bin/python",
    "python.dataScience.jupyterServerURI": "local",
    "python.linting.enabled": false,
    "python.jediEnabled": false,
    "python.linting.lintOnSave": false,
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.dataScience.askForKernelRestart": false,
    "python.dataScience.useNotebookEditor": true,

    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,

    "search.location": "panel",
    "search.showLineNumbers": true,
    "search.followSymlinks": false,

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": true,

    "latex-workshop.view.pdf.viewer": "tab",

    "git.ignoreLegacyWarning": true,

    "macros": {
        "splitEmpty": [
          "workbench.action.splitEditor",
          "workbench.action.files.newUntitledFile",
          "workbench.action.closeEditorsToTheLeft" 
        ]
      },

    "vim.insertModeKeyBindings": [
        {
            "before": ["f","d"],
            "after": ["<Esc>"]
        }
    ],
    "vim.leader": "<space>",
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["f","d"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<leader>","<space>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>","c","l"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["<leader>","e","f"],
            "commands": ["editor.action.formatDocument"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>","<space>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>","c","l"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["<leader>","n","c"],
            "commands": ["notifications.clearAll"]
        },
        {
            "before": ["<leader>","<tab>"],
            "commands": ["workbench.action.openNextRecentlyUsedEditorInGroup"]
        },
        {
            "before": ["<leader>","b","b"],
            "commands": ["workbench.action.showAllEditors"]
        },
        {
            "before": ["<leader>","b","d"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>","b","h"],
            "commands": ["workbench.action.moveEditorToPreviousGroup"]
        },
        {
            "before": ["<leader>","b","l"],
            "commands": ["workbench.action.moveEditorToNextGroup"]
        },
        {
            "before": [ "<leader>","b","n"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": [ "<leader>","b","p"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>","b","r"],
            "commands": ["workbench.action.openRecent"]
        },
       {
            "before": ["<leader>","f","d"],
            "commands": ["workbench.action.openGlobalSettings"]
        },
        {
            "before": ["<leader>","f","f"],
            "commands": ["workbench.action.files.openFileFolder"]
        },
        {
            "before": ["<leader>","f","m"],
            "commands": ["fileutils.moveFile"]
        },
        {
            "before": ["<leader>","f","n"],
            "commands": ["workbench.action.files.newUntitledFile"]
        },
        {
            "before": ["<leader>","f","p"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>","f","r"],
            "commands": ["fileutils.renameFile"]
        },
        {
            "before": ["<leader>","f","s"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["<leader>","f","t"],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["<leader>","f","y"],
            "commands": ["workbench.action.files.copyPathOfActiveFile"]
        },
        {
            "before": ["<leader>","g","v"],
            "commands": ["git-graph.view"]
        },
        {
            "before": ["<leader>","1"],
            "commands": ["workbench.action.focusFirstEditorGroup"]
        },
        {
            "before": ["<leader>","2"],
            "commands": ["workbench.action.focusSecondEditorGroup"]
        },
        {
            "before": ["<leader>","3"],
            "commands": ["workbench.action.focusThirdEditorGroup"]
        },
        {
            "before": ["<leader>","4"],
            "commands": ["workbench.action.focusFourthEditorGroup"]
        },
        {
            "before": ["<leader>","w","d"],
            "commands": ["workbench.action.closeEditorsInGroup"]
        },
        {
            "before": ["<leader>","w","e"],
            "commands": ["macros.splitEmpty"]
        },
        {
            "before": [ "<leader>","w","h"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": [ "<leader>","w","j"],
            "commands": ["workbench.action.joinTwoGroups"]
        },
        {
            "before": ["<leader>","w","v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before":  ["<leader>","s","s"],
            "commands": ["workbench.action.findInFiles"]
        },
        {
            "before": ["leader","j","f"],
            "after": ["leader","leader","f"]
        },
        {
            "before": ["leader","j","j"],
            "after": ["leader","leader","s"]
        },
        {
            "before": ["leader","j","l"],
            "after": ["leader","leader","leader","b","d","j","k"]
        },
        {
            "before": ["<leader>","j","s"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["leader","j","w"],
            "after": ["leader","leader","leader","b","d","w"]
        },
        {
            "before": ["<leader>","e","e"],
            "commands": ["editor.action.smartSelect.grow"]
        },
        {
            "before": ["<leader>","e","f"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": [ "<leader>","e","s"],
            "commands": ["editor.action.smartSelect.shrink"]
        },
        {
            "before": ["<leader>","t","k"],
            "commands": ["workbench.action.openGlobalKeybindings"]
        },
        {
            "before": ["<leader>","t","p"],
            "commands": ["workbench.action.togglePanel"]
        },
        {
            "before": [ "<leader>","t","a"],
            "commands": ["workbench.action.toggleActivityBarVisibility"]
        },
       {
            "before": ["<leader>","t","t"],
            "commands": ["workbench.action.selectTheme"]
        },
        {
            "before": ["<leader>","t","z"],
            "commands": ["workbench.action.terminal.toggleTerminal"]
        }
    ],
    "vim.easymotion": true,
    "vim.easymotionMarkerHeight": 18, 
    "vim.visualstar": true,
    "vim.surround": true,
    "vim.sneak": true,
    "vim.incsearch": true,

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false
}